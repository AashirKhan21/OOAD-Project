@model IEnumerable<Kutabkhana_DBLayer.tbl_PurTemDetails>

@{
    ViewBag.Title = "New Purchase";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
@using (Html.BeginForm("AddItem", "PurchaseCart", FormMethod.Post, null))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Enter Book Details</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label class="control-label col-md-2">Select Book</label>
        <div class="col-md-6">
            <select class="form-control" id="BID" name="BID" required></select>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Quantity</label>
        <div class="col-md-6">
            <input type="number" class="form-control" id="Qty" name="Qty" placeholder="Enter Purchase Quantity..." required />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Unit Price</label>
        <div class="col-md-6">
            <input type="number" class="form-control" id="Price" step=".01" name="Price" placeholder="Enter Unit Price..." required />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add Item" class="btn btn-success"/>
        </div>
    </div>

</div>


}

<div class="card shadow mb-4 mt-2">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Purchase Items List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Book Title
                        </th>
                        <th>
                            Qty
                        </th>
                        <th>
                            Unit Price
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.tbl_Book.BookTitle)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Qty)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UnitPrice)
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "Delete", new { id = item.PurTemItem }, new { @class = "btn btn-danger" })
                            </td>s
                        </tr>
                    }
                </tbody>
            </table>
        </div>
</div>