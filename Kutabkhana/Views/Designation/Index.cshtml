@model IEnumerable<Kutabkhana_DBLayer.tbl_Designation>

@{
    ViewBag.Title = "Designation's - Dashboard";
}

@Html.ActionLink("New Designation", "Create", null, new { @class = "btn btn-success" })
<!-- DataTales Example -->
<div class="card shadow mb-4 mt-2">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Designation's List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Designation Title
                        </th>
                        <th>
                            Scale
                        </th>
                        <th>
                           User
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Scale)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tbl_Users.Username)
                            </td>
                            <td class="btn-group">
                                @Html.ActionLink("Edit", "Edit", new { id = item.DesignationID }, new { @class="btn btn-primary"})
                                @Html.ActionLink("Details", "Details", new { id = item.DesignationID }, new { @class = "btn btn-info" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>